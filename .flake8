[flake8]
# Maximum line length
max-line-length = 88

# Exclude some directories from linting
exclude =
    .git,
    __pycache__,
    venv,
    .venv

# Ignore certain errors or warnings
ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503

# Select which errors and warnings are emitted
select =
    # PEP 8 errors and warnings
    E,
    W,
    # McCabe complexity
    C

# Use a consistent count for hanging indentation
indent-size = 4
